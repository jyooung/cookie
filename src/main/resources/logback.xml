<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 콘솔 출력 설정 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>  <!-- 로그 패턴 -->
        </encoder>
    </appender>

    <!-- 기본 로깅 레벨 설정 -->
    <root level="info">
        <appender-ref ref="STDOUT" />  <!-- STDOUT에 출력 -->
    </root>

</configuration>

